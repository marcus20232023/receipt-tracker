# Development Environment Variables
NODE_ENV=development

# Database
POSTGRES_DB=receipt_tracker_dev
POSTGRES_USER=receipt_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Ports
SERVER_PORT=5000
CLIENT_PORT=3000

# JWT
JWT_SECRET=development-jwt-secret-key-change-in-production-please
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email (Development - use a test service like MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=dev@receipttracker.local

# File Upload
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=./uploads

# OCR
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60

# Product APIs (Optional in development)
UPC_API_KEY=

# Notifications
NOTIFICATION_REMINDER_DAYS=30,7,1

# Security
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Frontend
VITE_API_URL=http://localhost:5000
VITE_APP_NAME=Receipt Tracker (Dev)
VITE_APP_VERSION=1.0.0-dev
