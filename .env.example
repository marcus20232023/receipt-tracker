# Database Configuration
DATABASE_URL=postgresql://receipt_user:secure_password@localhost:5432/receipt_tracker
POSTGRES_DB=receipt_tracker
POSTGRES_USER=receipt_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
UPLOAD_DIR=./uploads

# OCR Configuration
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60
OCR_PSM=3

# Product API Configuration
UPC_API_KEY=your-upc-api-key
UPC_API_URL=https://api.upcdatabase.org/product

# Application Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:5000

# Notification Configuration
EMAIL_FROM=noreply@receipttracker.com
NOTIFICATION_REMINDER_DAYS=30,7,1

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000

# Monitoring Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
